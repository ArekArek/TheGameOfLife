<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>


<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
   <center>
      <StackPane fx:id="myTable" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
   </center>
   <top>
      <HBox alignment="TOP_CENTER" prefHeight="21.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="myLabel" prefHeight="16.0" prefWidth="169.0" text="Label" />
            <Label fx:id="stepLabel" prefHeight="16.0" prefWidth="54.0" />
         </children>
         <opaqueInsets>
            <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <Button fx:id="myButton" mnemonicParsing="false" onAction="#buttonPressed" prefHeight="26.0" prefWidth="81.0" text="Button" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="40.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
